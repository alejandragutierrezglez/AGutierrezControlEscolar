@model ML.AlumnoMateria
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="=col-md-12">
            <h4>Alumno-Materia</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h5>Seleccione el alumno para visualizar sus materias</h5>
        </div>
    </div>    
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <td>Seleccionar</td>
                        <td class="hidden">IdAlumno</td>
                        <td>Nombre</td>
                        <td>Apellido Paterno </td>
                        <td>Apellido Materno</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.AlumnoMateria alumnoMateria in Model.AlumnosMaterias)
                    {
                        <tr>
                            <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-ok" href="@Url.Action("Form", "AlumnoMateria", new { IdAlumno = alumnoMateria.Alumno.IdAlumno })"></a></td>

                            <td class="hidden">@alumnoMateria.Alumno.IdAlumno</td>
                            <td>@alumnoMateria.Alumno.Nombre</td>
                            <td>@alumnoMateria.Alumno.ApellidoPaterno</td>
                            <td>@alumnoMateria.Alumno.ApellidoMaterno</td>                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

